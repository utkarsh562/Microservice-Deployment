version: 2.1
jobs:
  build:
    docker:
      - image: projo:latest

    steps:
      - checkout

      # Install Node.js dependencies
      - run:
          name: Install Dependencies
          command: npm ci
          command: npm install

      # Build Docker image
      - run:
          name: Build Docker Image
          command: |
            docker build -t projo:latest .

      # Run Docker container
      - run:
          name: Run Docker Container
          command: |
            docker run -d --name gymm -p 8080:80 projo:latest
            docker ps -a
